// datasource and generator
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// v0 models
model Document {
  id        String   @id @default(uuid())
  title     String
  slug      String
  meta      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id])
  projectId String

  versions  DocumentVersion[]
  outgoingLinks DocLink[] @relation("LinkSource")
  incomingLinks DocLink[] @relation("LinkTarget")

  @@unique([projectId, slug])
}

model DocumentVersion {
  id         String   @id @default(uuid())
  document   Document @relation(fields: [documentId], references: [id])
  documentId String
  version    Int
  content    Json     // Tiptap JSON + section layout
  createdAt  DateTime @default(now())

  @@unique([documentId, version])
}

model Project {
  id          String    @id @default(uuid())
  key         String    @unique
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  documents   Document[]
}

model DocLink {
  id        String   @id @default(uuid())
  source    Document @relation("LinkSource", fields: [sourceId], references: [id])
  sourceId  String
  target    Document @relation("LinkTarget", fields: [targetId], references: [id])
  targetId  String
  type      String
  notes     String?
  createdAt DateTime @default(now())
}

model ComponentType {
  id            String @id @default(uuid())
  key           String @unique
  name          String
  schema        Json   // JSON schema (Zod-compatible) for props
  defaultConfig Json
  styleOptions  Json?
}

model DataSource {
  id        String   @id @default(uuid())
  name      String
  type      String   // 'sql', 'rest', 'graphql', 'json', 'csv'
  config    String   // JSON string with connection details (encrypted)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  queries   DataQuery[]
  
  @@index([type])
}

model DataQuery {
  id           String     @id @default(uuid())
  name         String
  dataSource   DataSource @relation(fields: [dataSourceId], references: [id], onDelete: Cascade)
  dataSourceId String
  query        String     // SQL query, REST endpoint, or GraphQL query
  params       String?    // JSON string with query parameters
  transform    String?    // JavaScript transform function
  cacheEnabled Boolean    @default(false)
  cacheTTL     Int        @default(300) // seconds
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  @@index([dataSourceId])
}

model CustomComponent {
  id            String   @id @default(uuid())
  key           String   @unique
  name          String
  description   String
  category      String   @default("Custom")
  tags          String   // JSON array of tags
  code          String   @db.Text // React JSX code
  schema        String   @db.Text // JSON props schema
  defaultConfig String   @db.Text // JSON default configuration
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([category])
  @@index([key])
}
