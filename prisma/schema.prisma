// datasource and generator
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// v0 models
model Document {
  id        String   @id @default(uuid())
  title     String
  slug      String
  meta      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id])
  projectId String

  versions  DocumentVersion[]
  outgoingLinks DocLink[] @relation("LinkSource")
  incomingLinks DocLink[] @relation("LinkTarget")

  @@unique([projectId, slug])
}

model DocumentVersion {
  id         String   @id @default(uuid())
  document   Document @relation(fields: [documentId], references: [id])
  documentId String
  version    Int
  content    Json     // Tiptap JSON + section layout
  createdAt  DateTime @default(now())

  @@unique([documentId, version])
}

model Project {
  id          String    @id @default(uuid())
  key         String    @unique
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  documents   Document[]
}

model DocLink {
  id        String   @id @default(uuid())
  source    Document @relation("LinkSource", fields: [sourceId], references: [id])
  sourceId  String
  target    Document @relation("LinkTarget", fields: [targetId], references: [id])
  targetId  String
  type      String
  notes     String?
  createdAt DateTime @default(now())
}

model ComponentType {
  id            String @id @default(uuid())
  key           String @unique
  name          String
  schema        Json   // JSON schema (Zod-compatible) for props
  defaultConfig Json
  styleOptions  Json?
}
